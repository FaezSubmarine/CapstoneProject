@model CapstoneProject.Models.RaceRequest
@{
    ViewData["Title"] = "Book A Session";
}
<body>
    <div class="fullbody">
        <div class="TransparentContainer">
            <div class="text">Booking</div>
            <form asp-controller="TestRecord" asp-action="add" method="post">

                <div asp-validation-summary="All" class="text-danger form-group"></div>
                <div class="form-group">
                    <label asp-for="timeOfArrival"></label>
                    <input type="time" asp-for="timeOfArrival" class="form-control" />
                    <span asp-validation-for="timeOfArrival"></span>
                </div>
                <div class="form-group">
                    <label asp-for="dayOfArrival"></label>
                    <input type="date" asp-for="dayOfArrival" class="form-control" />
                    <span asp-validation-for="dayOfArrival"></span>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="carName"></label>
                    <input asp-for="carName" class="form-control" placeholder="Enter Your Car Model" />
                    <span asp-validation-for="carName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="circuitID"></label>
                    <select asp-for="circuitID" asp-items="ViewBag.Circuits" class="form-control">
                        <option>Please select circuit</option>
                    </select>
                    <span asp-validation-for="circuitID"></span>

                </div>

                <button type="submit" class="btn btn-primary">Add</button>

            </form>
        </div>
    </div>
</body>


